[user]
	name = Florian Wallner
	email = wallner@balumba.org
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
	editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/wallner/.gitexcludes
	autocrlf = input
[branch]
    autosetuprebase = always
[alias]
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    ls = log --decorate --pretty=oneline --abbrev-commit
	br = branch
	co = checkout
    st = status
    rb = rebase
    fa = fetch --all
    yolo = commit -a --amend --no-edit
[push]
	default = current
[giggle]
	main-window-maximized = false
	main-window-geometry = 1028x708+890+150
	history-view-vpane-position = 384
	main-window-view = HistoryView
	file-view-vpane-position = 629
