# Florian Wallners .screenrc
startup_message off
nethack on
vbell on
defscrollback 8192
ignorecase on
# Status line in window title
termcapinfo xterm*|Eterm|mlterm "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007"
# scroll buffer access with the means of the terminal (scroll bars)
termcapinfo xterm* ti@:te@
hardstatus off
hardstatus string "screen %n (%t)%? [%h]%?"
caption always "%{= dy}%-Lw%{=r}%20>%n %t%{= dy}%+Lw %{= dy}%-= %{=r}"
